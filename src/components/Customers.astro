---
import customersData from "@/data/customers.json";
---

<div class="unica-customers">
  {
    customersData.slice(0, 15).map((customer) => (
      <a
        class="unica-customers__item"
        href={customer.href}
        rel="nofollow"
        title="Перейти"
      >
        <img class="_image" src={customer.logo} alt="" />
      </a>
    ))
  }

  <a class="unica-customers__item _link" href="#allCustomers">смотреть все</a>
</div>

<style lang="scss">
  .unica-customers {
    grid-column: 1/-1;
    display: grid;
    // grid-template-columns: repeat(2, minmax(0, 1fr));
    // grid-auto-rows: 1fr;

    @media (width < 768px) {
      grid-auto-columns: 200px;
      grid-template-rows: repeat(2, minmax(0,1fr));
      grid-auto-flow: column;
      gap: 1rem;
      margin-inline: calc(-1 * var(--unica-padding-5));
      padding-inline: var(--unica-padding-5);
      overflow-x: auto;
    }

    @media (width > 768px) {
      grid-template-columns: repeat(4, minmax(0, 1fr));
    }

    @media (width > 960px) {
      grid-template-columns: repeat(8, minmax(0, 1fr));
    }

    &__item {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 1rem;

      @media (width > 768px) {
        padding: 3rem;
        box-shadow: 0 1px 0 var(--unica-color-divider);
      }

      @media (width > 960px) {
        &:not(:first-child) {
          border-left: 1px solid var(--unica-color-divider);
        }

        &:hover {
          outline: 2px solid var(--unica-color-accent);
          outline-offset: -10px;
        }

        ._image {
          width: auto;
        }
      }
    }
  }
</style>
