---
import servicesData from "@/data/services.json";
---
<div class="unica-services">
  {
    servicesData.map(service => (
      <div class="unica-services__item">
        <div class="_name">{service.name}</div>
        <div class="_image">
          <img src={service.image}/>  
        </div>
        <a class="_link" href={service.href}>подробнее</a>
      </div>
    ))
  }
</div>

<style lang="scss">
  .unica-services {
    grid-column: 1/-1;
    display: grid;
    grid-template-columns: repeat(4, minmax(0,1fr));

    &__item {
      display: grid;
      grid-template-rows: min(100px, 10vh) minmax(0,1fr);
      
      &:not(:first-child) {
        border-left: 1px solid var(--unica-color-divider);
      }

      &:hover {
        outline: 2px solid var(--unica-color-accent);
        outline-offset: -10px;
      }
    }

    ._name {
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.5vw;
      text-align: center;
    }

    ._image {
      height: 50vh;
      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    }

    ._link {
      padding: 1.5vw 2vw;
      font-size: 1vw;
    }
  }
</style>