---
import servicesData from "@/data/services.json";
---

<div class="unica-services">
  {
    servicesData.map((service, index) => (
      <a class="unica-services__item" href={service.href}>
        <div class="_name" transition:name={"service-title-" + (index + 1)}>
          {service.name}
        </div>
        <div class="_image">
          <img
            src={service.image}
            alt=""
            transition:name={"service-image-" + (index + 1)}
          />
        </div>
      </a>
    ))
  }
</div>

<style lang="scss">
  .unica-services {
    grid-column: 1/-1;
    display: grid;
    grid-template-columns: 100%;
    gap: var(--unica-padding-2);

    @media (width > 768px) {
      display: grid;
      grid-template-columns: repeat(4, minmax(0, 1fr));
    }

    &__item {
      display: grid;
      grid-template-rows: min(100px, 10vh) minmax(0, 1fr);
      text-decoration: none;
      color: var(--unica-color-text-primary);

      @media (width > 768px) {
        &:not(:first-child) {
          border-left: 1px solid var(--unica-color-divider);
        }
      }

      &:hover {
        outline: 2px solid var(--unica-color-accent);
        outline-offset: -10px;
      }
    }

    ._name {
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: var(--unica-fz-2);
      text-align: center;

      @media (width < 768px) {
        font-size: var(--unica-fz-3);
      }
    }

    ._image {
      height: 25vh;

      @media (width > 768px) {
        height: 50vh;
      }

      img {
        position: relative;
        z-index: -1;
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    }

    ._link {
      padding: var(--unica-padding-2);
      font-size: var(--unica-fz-body);
    }
  }
</style>
