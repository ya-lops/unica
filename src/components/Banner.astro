---
interface Props {
  inverse?: boolean
}

const {inverse = false} = Astro.props;
---
<div class:list={['unica-banner', {'+inverse':inverse}]}>
  <slot/>
</div>

<style lang="scss">
.unica-banner {
    grid-column: 1/-1;
    padding: var(--unica-padding-5);
    padding-inline: var(--unica-padding-15);
    font-size: var(--unica-fz-3);
    font-style: italic;
    text-wrap: balance;

    &.\+inverse {
      color: var(--unica-color-text-primary-inverse);
      background: var(--unica-color-accent-dark);
    }
  }
</style>