---
interface Props {
  inverse?: boolean
}

const {inverse = false} = Astro.props;
---
<div class:list={['unica-banner', {'+inverse':inverse}]}>
  <slot/>
</div>

<style lang="scss">
.unica-banner {
    grid-column: 1/-1;
    // margin: auto;
    padding: 5vw;
    padding-inline: 15vw;
    font-size: 1.5vw;
    font-style: italic;
    text-wrap: balance;

    &.\+inverse {
      color: var(--unica-color-text-primary-inverse);
      background: var(--unica-color-accent-dark);
    }
  }
</style>