---
import statsData from "@/data/stats.json";
---

<div class="unica-stats">
  {
    statsData.map((item) => (
      <div class="unica-stats__item">
        <div class="_value">{item.value}+</div>
        <div class="_name">{item.name}</div>
      </div>
    ))
  }
</div>

<style lang="scss">
  .unica-stats {
    grid-column: 1/-1;
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    grid-auto-rows: 1fr;

    @media (width > 641px) {
      grid-template-columns: repeat(4, minmax(0, 1fr));
    }

    &__item {
      display: flex;
      flex-flow: column;
      align-items: center;
      justify-content: center;
      padding: var(--unica-padding-5) var(--unica-padding-2);
      color: var(--unica-color-text-primary-inverse);
      text-align: center;

      &:not(:first-child) {
        border-left: 1px solid transparent;
      }

      &:nth-child(1) {
        background-color: hsl(0, 0%, 54%);
      }

      &:nth-child(2) {
        background-color: hsl(358, 85%, 52%);
      }

      &:nth-child(3) {
        background-color: hsl(0, 0%, 0%);
      }

      &:nth-child(4) {
        background-color: hsl(0, 0%, 21%);
      }

      ._name {
        font-weight: bold;
        font-weight: 300;
        text-transform: uppercase;
      }

      ._value {
        font-size: var(--unica-fz-5);
      }
    }
  }
</style>
